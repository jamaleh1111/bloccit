<h1>New topic</h1>

<div class="row">
  <div class="col-md-4".
    <p>Guidelines for topics:</p>
    <ul>
      <li>Make sure the topic is appropriate.</li>
      <li>Never insult dogs.</li>
      <li>Smile when you type.</li>
    </ul>
  </div>
  <div class="col-md-8">
    
    <%= render partial: 'form', locals: { topic: @topic } %>
    
  </div>
</div>
<script type="text/javascript">
  var blocmetrics = {
    report: function(val){
      var _bm_event = {
        event: {
          name: val
        }
      }

      var _bm_request = new XMLHttpRequest();
      _bm_request.open('POST', 'http://localhost:3000/api/events', true);
      _bm_request.setRequestHeader('Content-Type', 'application/json');

      _bm_request.onreadystatechange = function(){

      };
      _bm_request.send(JSON.stringify(_bm_event));
    }
  }

  $(document).ready(function(){
    $('#commit-and-send').click(function(){
      blocmetrics.report($('#attr-to-send').val());
    })
  })
</script>