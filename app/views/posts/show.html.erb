<h1><%= @post.markdown_title %></h1>

<% if policy(@comment).create? %>
  <%= link_to "Create comment", create_comment_topic_post_path(@post), class: 'btn btn-success' %> 
<% end %>

<div class="row">
  <div class="col-md-8">

    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>
    <small>
    <p><%= markdown_to_html @post.body %></p>
    
    <%= image_tag(@post.image.tiny.url) if @post.image? %>
    submited <%= time_ago_in_words(@post.created_at) %> ago by
    <%= @post.user.name %>

    <p><%= @post.markdown_body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<h2>Comments</h2>
<%= render @comments %>

<h2>Add a comment</h2>
<%= render partial: 'comments/form', locals: {topic: @topic, post: @post} %>

