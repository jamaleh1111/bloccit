<h1>Summary</h1>

<div class="row">
    <%= form_for [@topic, @post, @summary] do |f| %>
      <div class="form-group">
        <%= f.label :body, rows: 8, class: 'form-control', placeholder: "Enter summary description" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

