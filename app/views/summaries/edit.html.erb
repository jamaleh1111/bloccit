<h1>Edit summary</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @summary do |f| %>
      <div class="form-group">
        <%= f.label :description, rows: 8, class: 'form-control', placeholder: "Enter summary description" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
